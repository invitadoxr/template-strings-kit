{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "syntaxes/html-template.json": true
    },
    "hide-files.files": [
        "syntaxes/html-template.json"
    ],

    // "emmet.includeLanguages": {
    //     "javascript" : "html"
    // },
    // "emmet.triggerExpansionOnTab": true,
    // "emmet.showExpandedAbbreviation": "never",

    "commentAnchors.tags.anchors": {

        // ":link { color: #0000EE; }",
        // :visited { color: #551A8B; }
        // :link:active, :visited:active { color: #FF0000; }

        "ANCHOR": {
            "iconColor": "#ffffff",
            "highlightColor": "#ffffff",
            "scope": "file"
        },
        "TODO": {
            "iconColor": "blue",
            "highlightColor": "#3ea8ff",
            "scope": "workspace"
        },
        "FIXME": {
            "iconColor": "red",
            "highlightColor": "#F44336",
            "scope": "workspace"
        },
        "CRITICAL": {
            "iconColor": "red",
            "highlightColor": "#F44336",
            "scope": "workspace"
        },
        "ERROR": {
            "iconColor": "red",
            "highlightColor": "#F44336",
            "scope": "workspace"
        },
        "STUB": {
            "iconColor": "purple",
            "highlightColor": "#BA68C8",
            "scope": "file"
        },
        "NOTE": {
            "iconColor": "green",
            "highlightColor": "green",
            "scope": "workspace"
        },
        "INFO": {
            "iconColor": "green",
            "highlightColor": "green",
            "scope": "workspace"
        },
        "WARN": {
            "iconColor": "orange",
            "highlightColor": "orange",
            "scope": "workspace"
        },
        "WARNING": {
            "iconColor": "orange",
            "highlightColor": "orange",
            "scope": "workspace"
        },
        "REVIEW": {
            "iconColor": "orange",
            "highlightColor": "orange",
            "scope": "workspace"
        },
        "SECTION": {
            "iconColor": "blurple",
            "highlightColor": "#896afc",
            "scope": "workspace",
            "behavior": "region"
        },
        "REGION": {
            "iconColor": "blurple",
            "highlightColor": "#896afc",
            "scope": "workspace",
            "behavior": "region"
        },
        "LINK": {
            "iconColor": "#0000EE",
            "highlightColor": "#0000EE",
            "scope": "workspace",
            "behavior": "link"
        },
        "COMMENT": {
            "iconColor": "#438a55",
            "highlightColor": "#438a55",
            "scope": "file"
        },
        "IGNORE": {
            "iconColor": "#004422",
            "highlightColor": "#004422",
            "scope": "file"
        },
    }
}